<Window x:Class="test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test"
        mc:Ignorable="d"
        Title="AllCle" Height="450" Width="800">
    <Grid OpacityMask="#FFFFF4F4">
        <Grid Margin="176,204,163.6,78">
            <PasswordBox x:Name="PW_Box" HorizontalAlignment="Left" Height="40" Margin="0,46,0,0" VerticalAlignment="Top" Width="302" UseLayoutRounding="False"/>
            <TextBox x:Name="ID_Box" HorizontalAlignment="Left" Height="40" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="302" AcceptsTab="True"/>
