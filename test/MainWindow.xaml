            <Button x:Name="Forget_btn" Content="Forget btn" HorizontalAlignment="Left" Margin="73,102,0,0" Width="90" Click="Button_Click" Background="#FFFCFCFC" BorderBrush="White" Height="21" VerticalAlignment="Top"/>
        </Grid>
        <TextBlock x:Name="screen" Height="50" Margin="143,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="514" FontSize="36" HorizontalAlignment="Left"><Run Text="홍익대학교 시간표 도우미 올클"/><LineBreak/><Run Text=""/></TextBlock>
    </Grid>

</Window>
